
def toJadenCase(string):
    '''
    to display all the first letter in capital for each word
    '''
    
    final_word = []
    for word in string.split():
        final_word.append(word[0].title() + word[1::].lower()) 
        
        # WHERE:
        # word[0].title() = capitalize each letter
        # word[1::].lower() = All the letters after index [0] will be in lower caps
    
    #print(final_word)
    return ' '.join(final_word)
